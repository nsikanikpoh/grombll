<% provide( :title, " CatLevel1 Repository") %>


<%if current_user.admin?%>
<div class="row">
  <div class="col-md-12">
  <div class="x_panel" style="">
      <div class="x_title">
<h1>
  
  Grombll Sub Category Level 1s
</h1>
<small>this page is available to admins only</small>
</div>
<br>
<br>
<br>

  <% if @catlevel1s.any? %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Sub Category Level 1 Name</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @catlevel1s.each do |zone| %>
      <tr>
        <td><%= zone.name %></td>
       
        <td><%= link_to 'Goto Sub Level', zone, class:"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_catlevel1_path(zone), class:"btn btn-success" %></td>
        <td><%= link_to 'Delete', zone, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
 <%else%>
 No Categories Entered Yet

</div>
</div>
</div>

 <%end%>
  <%= link_to 'Dashboard', root_path, class:"btn btn-info" %> | <%= link_to "Back", :back, class:"btn btn-warning"%>

 <%= will_paginate @catlevel1s, :renderer => BootstrapPagination::Rails %>
 <%= link_to 'New Category', new_category_path, class:"btn btn-success"%>
  <%else%>
    <h2>Unauthoried access!</h2>
   <p style="color:red;">You are not authorised to view this page.</p>
  <%end%>




