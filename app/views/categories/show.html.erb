<% provide( :title, @category.name) %>



<div class="row">
  <div class="col-md-12">
  <div class="x_panel" style="">
      <div class="x_title">
<h1>
  
  <%= @category.name %>
</h1>
</div>
<br>
<br>
<br>



<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @category.info %>
</p>





<% if @companies.any? %>
<p class="lead" style="color:orange;">Companies Linked To this Category</p>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Company Name</th>
     
   
     
      <th>Area of Operation</th>
  
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.first_name %>

        <% if company.first_name == "Base Company"%>

          <p style="color:red;">all grumbles to unregistered companies in this system reside here</p>
        <%end%>
        </td>
       

        
        <td><%= company.sublevel.name %></td>

        <td><%= link_to 'Show', company , class:"btn btn-info btn-xs"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  
<%= will_paginate @companies, :renderer => BootstrapPagination::Rails %>
<%else%>

<p style="color:red;">No Companies Registered under this category Yet!</p>
<%end%>








<%if current_user.admin?%>
<%= link_to 'Edit', edit_category_path(@category), class:"btn btn-success" %> |
<%= link_to 'Add Category Sub Level 1', newcatlevel1_category_path(@category), class:"btn btn-success" %>
 <%= link_to 'New Category', new_category_path, class:"btn btn-success"%>
  | <%= link_to 'Add Agency', new_category_agency_path(@category), class:"btn btn-info" %>
 
<%end%>
<%= link_to 'Cateories Repo', categories_path, class:"btn btn-success", class:"btn btn-primary" %>|

  <%= link_to 'Dashboard', root_path, class:"btn btn-info" %> | <%= link_to "Back", :back, class:"btn btn-warning"%>



 