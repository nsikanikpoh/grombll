<%= form_for([@grumble, @grumble.comments.build], html: { multipart: true }) do |form| %>
  
<div class="row">
  <div class="col-md-9 col-xs-12">
    
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br />
        <form class="form-horizontal form-label-left input_mask">
<div class="col-md-6 col-sm-12  form-group has-feedback">
            
     <%= form.text_area :body, id: :comment_body,  class:"form-control has-feedback-left", placeholder:"please type your comment", type:"text", required:"required", rows:10%>
    
    
  <span class="fa fa-edit form-control-feedback left" aria-hidden="true"></span>
          </div>

 <div class="col-md-6 col-sm-6 col-xs-12 form-group has-feedback">
             <%= form.label :attachment, "Attach document if any..?   Allowed Formats : pdf, doc, html, docx, jpg, jpeg, gif, png, txt, mp3, xls, xlsx, txt, ppt" %>
     <%= form.file_field :attachment, autofocus: true do %>
    <i class="fa fa-paperclip file-browser"></i>

  <%= form.hidden_field :attachment_cache %>
   <% end %>
          </div>


    
  

          
          <div class="form-group">
            <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
               <%= form.submit "Submit", class:"btn btn-info"%> <br/><br/>
 

<% end %>
</div>
</div>
</form>
</div>
</div>
</div>
</div>





